package empresa;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);

		   Cadastro cadastro = new Cadastro(10); // Crie um cadastro com capacidade para 10 funcionários

	        // Exemplo de cadastro de funcionários
	        Funcionario funcionario1 = new Funcionario("João", 30, "Analista de TI", 5000.0, "123-456-7890", "Rua A, 123");
	        Funcionario funcionario2 = new Funcionario("Maria", 25, "Engenheira de Software", 6000.0, "987-654-3210", "Rua B, 456");

	        cadastro.cadastrarFuncionario(funcionario1);
	        cadastro.cadastrarFuncionario(funcionario2);

	        cadastro.imprimirCadastro();
	    }
	}