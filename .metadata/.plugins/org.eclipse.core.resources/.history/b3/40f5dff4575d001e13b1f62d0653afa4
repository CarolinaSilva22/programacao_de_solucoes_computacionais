package empresa;

class Cadastro {
    private Funcionario[] funcionarios;
    private int tamanho;
    private static final int tamanhomaximo = 100;

    public Cadastro() {
        funcionarios = new Funcionario[tamanhomaximo];
        tamanho = 0;
    }

    public void cadastrar(Funcionario funcionario) {
        if (tamanho < tamanhomaximo) {
            funcionarios[tamanho] = funcionario;
            tamanho++;
            System.out.println("Funcionário cadastrado com sucesso!");
        } else {
            System.out.println("Cadastro está cheio. Não é possível adicionar mais funcionários.");
        }
    }

    public void imprimirCadastro() {
        System.out.println("Lista de Funcionários:");
        for (int i = 0; i < tamanho; i++) {
            funcionarios[i].exibe();
            System.out.println();
        }
    }
}